<!-- Top san pham noi bat-->
<div style="width: 100%; height: 20px; border-bottom: 1px solid black; text-align: center; margin-top:10px;">
    <span style="font-size: 20px; background-color: white; padding: 0 10px;">
        SÁCH NỔI BẬT <!--Padding is optional-->
    </span>
</div>
<div class="container body-content">
    <div class="top-product">
        <div class="top-items">
            <img src="~/Images/sach7.jpg" alt="sach7" class="item-img">
            <div class="item-body">
                <h3 class="item-heading">NXB: Hội nhà văn</h3>
                <p class="item-desc">
                    Hãy làm quen với Zezé, cậu bé tinh nghịch siêu hạng đồng thời cũng đáng yêu bậc nhất... người ta trước trái tim thiện lương cùng ...


                </p>
                <a href="@Url.Action("Details", "Sach", new { id = "TT01"})" class="item-buy-btn">Xem chi tiết</a>
            </div>
        </div>
        <div class="top-items">
            <img src="~/Images/sach5.jpg" alt="sach5" class="item-img">
            <div class="item-body">
                <h3 class="item-heading">NXB: Thanh Niên </h3>
                <p class="item-desc">
                    Cuốn sách Tâm lý học – Nghệ thuật giải mã hành vi của tác giả Trần Lộ sẽ cung cấp cho chúng ta những lý luận uy tín
                </p>
                <a href="@Url.Action("Details", "Sach", new { id = "TL01"})" class="item-buy-btn">Xem chi tiết</a>
            </div>
        </div>        <div class="top-items">
            <img src="~/Images/sach9.jpg" alt="sach9" class="item-img">
            <div class="item-body">
                <h3 class="item-heading">NXB: Trẻ</h3>
                <p class="item-desc">
                    BTác phẩm "Vợ Nhặt" của tác giả Kim Lân (1921-2007). Ông là một trong những cây bút viết truyện ngắn xuất sắc nhất của văn học Việt Nam hiện đại
                </p>
                <a href="@Url.Action("Details", "Sach", new { id = "VH01"})" class="item-buy-btn">Xem chi tiết</a>
            </div>
        </div>


    </div>
</div>

<!--Danh sach san pham-->
<div style="width: 100%; height: 20px; border-bottom: 1px solid black; text-align: center; margin:10px 0;">
    <span style="font-size: 20px; background-color: white; padding: 0 10px;">
        SẢN PHẨM <!--Padding is optional-->
    </span>
</div>
@{
    var count = 0;
}
<ul class="container-menu">
    @foreach (var item in Model)
    {
        if (count < 8)
        {
            var name = "";
            if(item.TenSach.Length < 35)
            {
                name = item.TenSach;
            }
            else
            {
                name = item.TenSach.Substring(0, 35) + "...";
            }
            <li class="product col-sm-3 col-lg-3">
                <a class="item-image" href="@Url.Action("Details", "Sach", new { id = item.MaSach })" title="@item.TenSach">
                    @Html.Image("../Images/" + item.HinhAnh, "alt", "210", "210")
                </a>

                <h4 class="name"><a href="@Url.Action("Details", "Sach", new { id = item.MaSach })">@Html.DisplayFor(modelItem => name)</a></h4>
                <hr />
                <p class="price-label" style="color: #e68b24">@string.Format("{0:#,##0.##}₫", item.GiaTien)</p>
                <br />
            </li>
            count++;
        }
    }
</ul>
<div class="text-center">
    <a class="btn-allview" href="@Url.Action("Index","HienThiSanPham")"> Xem tất cả sản phẩm</a>
</div>
