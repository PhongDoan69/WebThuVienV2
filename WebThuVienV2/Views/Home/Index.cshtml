@model IEnumerable<WebThuVienV2.Models.Sach>
@using WebThuVienV2.Models;
@using System.Linq;
@using System.Web.Mvc;


@{
    ViewBag.Title = "Home Page";
}

<!-- Carousel Default -->
<section class="carousel-default">
    <div id="carousel-default" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel-default" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-default" data-slide-to="1" class=""></li>
            <li data-target="#carousel-default" data-slide-to="2" class=""></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <!-- NOTE: Bootstrap v4 changes class name to carousel-item -->
            <div class="item active">
                <img src="~/Images/slider1.jpeg" alt="First slide" style="padding-top:15px">
            </div>
            <div class="item">
                <img src="~/Images/slider2.jpg" alt="Second slide" style="padding-top:15px">
            </div>
            <div class="item">
                <img src="~/Images/slider3.jpg" alt="Third slide" style="padding-top:15px" />
            </div>
        </div>
        <a class="left carousel-control" href="#carousel-default" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-default" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
<!-- /end Carousel Default -->
<!-- Top san pham noi bat-->
<div style="width: 100%; height: 20px; border-bottom: 1px solid black; text-align: center; margin-top:10px;">
    <span style="font-size: 20px; background-color: white; padding: 0 10px;">
        SÁCH NỔI BẬT <!--Padding is optional-->
    </span>
</div>
<div class="container body-content">
    <div class="top-product">
        <div class="top-items">
            <img src="~/Images/sach1.jpg" alt="sach1" class="item-img">
            <div class="item-body">
                <h3 class="item-heading">NXB: Phụ nữ</h3>
                <p class="item-datetime">Fri 27 Nov 2016</p>
                <p class="item-desc">
                    Bầu trời đêm trên hành tinh Krikkit là cảnh tượng kém thú vị nhất: đen ngòm không một ánh trăng sao. Đó là lý do ...
                </p>
                <a href="@Url.Action("Details", "Sach", new { id = "KH01"})" class="item-buy-btn">Xem chi tiết</a>
            </div>
        </div>
        <div class="top-items">
            <img src="~/Images/sach5.jpg" alt="sach5" class="item-img">
            <div class="item-body">
                <h3 class="item-heading">NXB: Thanh Niên </h3>
                <p class="item-datetime">Fri 27 Nov 2016</p>
                <p class="item-desc">
                    Cuốn sách Tâm lý học – Nghệ thuật giải mã hành vi của tác giả Trần Lộ sẽ cung cấp cho chúng ta những lý luận uy tín và kỳ diệu của tâm lý học để có thể đọc suy nghĩ của người khác, cũng như phá tan phòng tuyến tâm lý con người. Trên thực tế, một số lượng lớn hành vi và cử chỉ của con người được thực hiện một cách vô thức. Do sự vô thức đó tiệm cận với nơi sâu kín nhất trong tâm trí, nên những hành động bản năng này sẽ thể hiện nội tâm con người một cách rõ ràng nhất. Vì vậy, thông qua hành vi, tính cách, ngôn ngữ cơ thể, sở thích… thậm chí là lời nói dối của đối phương để có thể khai thác “Ma pháp”- suy nghĩ thực sự trong lòng người khác.
                </p>
                <a href="@Url.Action("Details", "Sach", new { id = "TL01"})" class="item-buy-btn">Xem chi tiết</a>
            </div>
        </div>        <div class="top-items">
            <img src="~/Images/sach9.jpg" alt="sach9" class="item-img">
            <div class="item-body">
                <h3 class="item-heading">NXB: Trẻ</h3>
                <p class="item-datetime">Fri 27 Nov 2016</p>
                <p class="item-desc">
                    BTác phẩm "Vợ Nhặt" của tác giả Kim Lân (1921-2007). Ông là một trong những cây bút viết truyện ngắn xuất sắc nhất của văn học Việt Nam hiện đại
                </p>
                <a href="@Url.Action("Details", "Sach", new { id = "VH01"})" class="item-buy-btn">Xem chi tiết</a>
            </div>
        </div>


    </div>
</div>

<!--Danh sach san pham-->
<div style="width: 100%; height: 20px; border-bottom: 1px solid black; text-align: center; margin:10px 0;">
    <span style="font-size: 20px; background-color: white; padding: 0 10px;">
        SẢN PHẨM <!--Padding is optional-->
    </span>
</div>
@{
    var count = 0;
}
<ul class="container-menu">
    @foreach (var item in Model)
    {
        if (count < 8)
        {
            var name = "";
            if (item.TenSach.Length < 35)
            {
                name = item.TenSach;
            }
            else
            {
                name = item.TenSach.Substring(0, 35) + "...";
            }
            <li class="product col-sm-3 col-lg-3">
                <a class="item-image" href="@Url.Action("Details", "Sach", new { id = item.MaSach })" title="@item.TenSach">
                    @Html.Image("../Images/" + item.HinhAnh, "alt", "210", "210")
                </a>

                <h4 class="name"><a href="@Url.Action("Details", "Sach", new { id = item.MaSach })"> @Html.DisplayFor(modelItem => item)</a></h4>
                <hr />
                <p class="price-label" style="color: #e68b24">@string.Format("{0:#,##0.##}₫", item.GiaTien)</p>
                <br />
            </li>
            count++;
        }
    }
</ul>
<div class="text-center">
    <a class="btn-allview" href="@Url.Action("Index","HienThiSanPham")"> Xem tất cả sản phẩm</a>
</div>
<style>
    * {
        /*box-sizing:border-box;*/
    }

    .product {
        background-color: white;
        text-align: center;
        font-size: 16px;
        font-family: Lato, sans-serif;
        list-style-type: none;
        width: 25%;
        height: 300px;
        margin: 15px 0px;
        transition: transform .5s;
        align-items: center;
    }

    hr {
        margin-top: 5px;
        margin-bottom: 10px;
        border: 0;
        border-top: 2px solid #eeeeee;
    }

    .top-product {
        margin: 32px -8px 0px;
        padding-bottom: 48px;
    }

    .top-items {
        float: left;
        width: 33.33%;
        padding: 0 8px;
        animation: imageFadeIn ease 2s;
    }

        .top-items:hover {
            box-shadow: 0 0 10px #ccc;
        }

    .item-img {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-top: 35px;
        width: 87%;
    }

        .item-img:hover {
            transform: scale(1.2);
            transition: transform .5s;
        }

    .item-body {
        background-color: white;
        padding: 16px;
    }

    .item-heading {
        font-weight: 700;
        font-size: 15px;
        padding-top: 5px;
    }

    .item-datetime {
        margin-top: 15px;
        opacity: 70%;
    }

    .item-desc {
        margin-top: 15px;
        line-height: 1.4;
    }

    .item-buy-btn {
        color: black;
        background-color: white;
        border: 1px solid #0c6363;
        text-decoration: none;
        margin-top: 15px;
        padding: 11px 16px;
        display: inline-block;
        border-radius: 10px;
        text-decoration: none;
    }

        .item-buy-btn:hover {
            color: white;
            background-color: #0c6363;
            text-decoration: none;
        }

    @@keyframes imageFadeIn {
        from {
            transform: translateY(-150px);
            opacity: 0;
        }

        to {
            transform: translateY(0px);
            opacity: 1;
        }
    }

    .item-image > img:hover {
        transform: scale(1.2);
        transition: transform .5s;
        cursor: pointer;
    }

    .name {
        padding-top: 12px;
        white-space: pre;
        font-size: 16px;
    }

        .name > a {
            color: black;
        }

            .name > a:hover {
                color: #b61919;
                text-decoration: none;
            }

        .name:hover {
            color: #d62f2f;
            cursor: pointer;
        }

    .product {
        background-color: white;
        text-align: center;
        font-size: 16px;
        font-family: Lato, sans-serif;
        list-style-type: none;
        height: 300px;
        margin: 15px 0px;
        transition: transform .5s;
        align-items: center;
    }

    hr {
        margin-top: 5px;
        margin-bottom: 10px;
        border: 0;
        border-top: 2px solid #eeeeee;
    }

    .btn-allview {
        background-color: white;
        border: none;
        color: black;
        padding: 8px 16px;
        display: inline-block;
        font-size: 16px;
        margin: auto;
        transition-duration: 0.4s;
        cursor: pointer;
        text-decoration: none;
        border: 2px solid #c47135;
    }

        .btn-allview:hover {
            background-color: #0c6363;
            color: #FF2;
            text-decoration: none;
        }
</style>