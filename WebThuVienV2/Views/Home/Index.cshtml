@model IEnumerable<WebThuVienV2.Models.Sach>
@using WebThuVienV2.Models;
@using System.Linq;
@using System.Web.Mvc;


<!-- Carousel Default -->
<div class="container">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
