@model IEnumerable<WebThuVienV2.Models.Sach>
@using WebThuVienV2.Models


<h2 class="text-center" style="margin-top:40px;">Danh sách sản phẩm</h2>
<div class="text-center" style="margin-top:10px">
    @using (Html.BeginForm())
    {
        <form>
            <div class="input-group" style="display:inline-flex">
                <input type="text" class="form-control" placeholder="Nhập tên sách..." name="searchString">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        </form>
    }
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr style="background-color:#e97777; color:white;">
        <th style="width:5%;"> Mã SP</th>
        <th style="width:12%">
            Tên
        </th>
        <th style="width:8%">
            Đơn vị tính
        </th>
        <th style="width:5%">
            Giá
        </th>
        <th style="width:10%">
            Nhà xuất bản
        </th>
        <th style="width:40%">
            Mô tả
        </th>
        <th style="width:10%">
            Hình ảnh
        </th>
        <th style="width:5%">
            Thể loại
        </th>
        <th style="width:5%"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonViTinh)
            </td>
            <td>
                @string.Format("{0:#,##0.##} VND", item.GiaTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhaXuatBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td title="@item.HinhAnh">
                @Html.Image("../Images/" + item.HinhAnh, "", "128", "128")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSach.TenLoaiSach)
            </td>
            <td class="btn-action">
                <a href="@Url.Action("Edit", new { id = item.MaSach})" class="btn bg-danger btn-success btn-sm">Sửa</a>
                <a target="_blank" href="@Url.Action("Details", new { id = item.MaSach})" class="btn bg-danger btn-info btn-sm">Chi tiết</a>
                <a href="@Url.Action("Delete", new { id = item.MaSach})" class="btn bg-danger btn-danger btn-sm">Xóa</a>
            </td>
        </tr>
    }
</table>

<style>
    .dropdown {
        display: inline-block;
    }

    .btn-create {
        background-color: white;
        border: none;
        color: black;
        padding: 8px 16px;
        text-align: center;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
        text-decoration: none;
        border: 2px solid #c47135;
    }

        .btn-create:hover {
            background-color: #0c6363;
            color: #FF2;
            text-decoration: none;
        }

    th > a {
        color: white;
    }

        th > a:hover {
            text-decoration: none;
        }

    .btn-action > a {
        width: 60px;
        margin: 5px 0;
    }

    .page-filter {
        float: right;
        margin-right: 50px;
    }
</style>